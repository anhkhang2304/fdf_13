<div class="portlet view">
  <div class="portlet-title">
    <div class="caption">
      <h4>
        <span class="text-danger"><%= "#{t "title"}: " %></span><%= @product.name %>
      </h4>
    </div>
  </div>
  <div class="portlet-body">
    <div class="grid-content">
      <div>
        <div class="col-md-6 ">
          <p>
            <span class="text-danger"><%= "#{t "category.title"}:" %></span>
            <%= @product.category.title %>
          </p>
          <p>
            <span class="text-danger"><%= "#{t "product.description"}:" %></span>
            <%= @product.description %>
          </p>
          <p>
            <span class="text-danger"><%= "#{t "product.quantity"}:" %></span>
            <%= @product.quantity %>
          </p>
          <p>
            <span class="text-danger"><%= "#{t "product.rate"}:" %></span>
            <%= @product.average("rate").avg %>
          </p>
          <p>
            <span class="text-danger"><%= "#{t "product.total_rate"}:" %></span>
            <%= @product.rates("rate").count %>
          </p>
          <p>
            <span class="text-danger"><%= "#{t "created"}:" %></span>
            <%= l @product.created_at, format: :long %>
          </p>
        </div>
        <div class="col-md-5 col-md-offset-1">
          <p>
            <img src="<%= @product.avatar.thumb %>">
          </p>
        </div>
      </div>

    </div>
  </div>
  <div class="clearfix"></div>
</div>
