<div class="portlet box manager">
  <div class="portlet-title">
    <div class="caption">
      <span class="caption-title">
        <i class="fa fa-reorder"></i><%= t "manager" %>
      </span>
      <div class="action-container top pull-right">
        <button data-size="FULL" data-title="<%= t "add" %>"
          data-url="<%= new_admin_product_path %>" class="act-add btn btn-success">
          <%= t "add" %></button>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="search-container">
      <%= search_form_for [:admin, @q] do |f| %>
        <div class="col-md-3">
          <%= f.search_field :name_cont_any, class: "form-control",
            placeholder: t("keyword") %>
        </div>
        <%= f.submit class: "btn btn-default btn-search-top clear" %>
      <% end %>
      <div class="clearfix"></div>
    </div>
    <div class="data-container">
      <div class="grid-data" data-size="FULL" data-size-reset="NORMAL"
        data-title="<%= t "update" %>">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th><%= t "ord" %></th>
              <th><%= t "name" %></th>
              <th><%= t "product.price" %></th>
              <th><%= t "category.title" %></th>
              <th><%= t "created_at" %></th>
              <th><%= t "function" %></th>
            </tr>
          </thead>
          <tbody>
            <% @products.each_with_index do |product, index| %>
              <tr>
                <td class="text-center"><%= @ord+index %></td>
                <td>
                  <a class="act-view" href="javascript:;"
                    data-view="<%= admin_product_path(product)%>">
                    <%= product.name %>
                  </a>
                  <% if product.comments.length > 0 %>
                    <span class="badge">
                      <%= product.comments.length.to_s + t("comments") %>
                    </span>
                  <% end %>
                </td>
                <td class="text-center"><%= product.price %></td>
                <td class="text-center"><%= product.category.title %></td>
                <td class="text-center"><%= l product.created_at, format: :long %></td>
                <td class="text-center">
                  <%= link_to "#", title: t("edit"), class: "act-edit text-success",
                    data: {url: edit_admin_product_path(product)} do %>
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to [:admin, product], method: :delete, title: t("delete"),
                    class: "underline text-danger", data: {confirm: t("sure")} do %>
                    <span class="glyphicon glyphicon-remove"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row wrap-paging">
          <div class="col-sm-5">
          </div>
          <div class="col-sm-7 text-right">
            <%= paginate @products, theme: "twitter-bootstrap-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
