<%= simple_form_for [:admin, @product] do |f| %>
  <%= f.input :name, class: "form-control" %>
  <%= f.input :category_id, collection: @categories, class: "form-control" %>
  <%= f.input :description, class: "form-control" %>
  <%= f.input :price, class: "form-control" %>
  <% if f.object.avatar? %>
    <%= image_tag f.object.avatar.thumb.url %>
    <%= f.input :remove_avatar, as: :boolean,
      checked_value: true, unchecked_value: false %>
    <%= f.label :remove_avatar %>
  <% end %>
  <%= f.input :avatar, class: "form-control" %>
<% end %>
