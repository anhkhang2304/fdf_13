<div class="portlet view">
  <div class="portlet-title">
    <div class="caption">
      <h4>
        <span class="text-danger"><%= t "user.name" %></span><%= @user.name %>
      </h4>
    </div>
  </div>
  <div class="portlet-body">
    <div class="grid-content">
      <div>
        <div class="col-md-6 ">
          <p>
            <span class="text-danger"><%= t "user.email" %></span>
            <%= @user.email %></p>
          <p>
            <span class="text-danger"><%= t "user.dob" %></span>
            <%= @user.birthday.present? ? @user.birthday
              .strftime(t "time.formats.short_date") : t("user.N/A") %>
          </p>
          <p>
            <span class="text-danger"><%= t "user.mobile" %></span>
            <%= @user.mobile.present? ? @user.mobile : t("user.N/A") %>
          </p>
          <p>
            <span class="text-danger"><%= t "user.address" %></span>
            <%= @user.address.present? ? @user.address : t("user.N/A") %>
          </p>
        </div>
        <div class="col-md-5 col-md-offset-1">
          <p>
            <img src="">
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
