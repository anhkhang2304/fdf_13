<div class="portlet box manager">
  <div class="portlet-title">
    <div class="caption">
      <span class="caption-title">
        <i class="fa fa-reorder"></i><%= t "manager" %>
      </span>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="search-container">
      <%= search_form_for [:admin, @q] do |f| %>
        <div class="col-md-3">
          <%= f.search_field :name_cont_any, class: "form-control",
            placeholder: t("user.name") %>
        </div>
        <%= f.submit class: "btn btn-default btn-search-top clear" %>
      <% end %>
      <div class="clearfix"></div>
    </div>
    <div class="data-container">
      <div class="grid-data" data-size="FULL" data-size-reset="NORMAL"
        data-title="<%= t "update" %>">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th><%= t "ord" %></th>
              <th><%= t "name" %></th>
              <th><%= t "email" %></th>
              <th><%= t "created" %></th>
              <th><%= t "function" %></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each_with_index do |user, index| %>
              <tr>
                <td class="text-center"><%= @ord+index %></td>
                <td>
                  <a class="act-view" href="javascript:;"
                    data-view="<%= admin_user_path(user)%>">
                    <%= user.name %>
                  </a>
                </td>
                <td class="text-center"><%= user.email %></td>
                <td class="text-center"><%= l user.created_at, format: :long %></td>
                <td class="text-center">
                  <%= link_to [:admin, user], method: :delete, title: t("delete"),
                    class: "underline text-danger", data: {confirm: t("sure")} do %>
                    <span class="glyphicon glyphicon-remove"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row wrap-paging">
          <div class="col-sm-5">
          </div>
          <div class="col-sm-7 text-right">
            <%= paginate @users, theme: "twitter-bootstrap-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
