<div class="portlet box manager">
  <div class="portlet-title">
    <div class="caption">
      <span class="caption-title">
        <i class="fa fa-reorder"></i><%= t "manager" %>
      </span>
      <div class="action-container top pull-right">
        <button data-size="FULL" data-title="<%= t "add" %>"
          data-url="<%= new_admin_category_path %>" class="act-add btn btn-success">
          <%= t "add" %></button>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="search-container">
      <%= form_tag admin_categories_path, method: :get do %>
        <div class="col-md-3">
          <%= text_field_tag :keyword, params[:keyword], class: "form-control",
            placeholder: t("keyword") %>
        </div>
        <%= submit_tag t("search"),
          class: "btn btn-default btn-search-top clear" %>
        <% end %>
      <div class="clearfix"></div>
    </div>
    <div class="data-container">
      <div class="grid-data" data-size="FULL" data-size-reset="NORMAL"
        data-title="<%= t "update" %>">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th><%= t "ord" %></th>
              <th><%= t "title" %></th>
              <th><%= t "created" %></th>
              <th><%= t "function" %></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each_with_index do |category, index| %>
              <tr>
                <td class="text-center"><%= @ord+index %></td>
                <td>
                  <%= category.title %>
                  <span class="badge"><%= category.products.size %></span>
                </td>
                <td><%= l category.created_at, format: :long %></td>
                <td class="text-center">
                  <%= link_to "#", title: t("edit"), class: "underline text-success",
                    data: {url: edit_admin_category_path(category)} do %>
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to [:admin, category], method: :delete, title: t("delete"),
                    class: "underline text-danger", data: {confirm: t("sure")} do %>
                      <span class="glyphicon glyphicon-remove"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row wrap-paging">
          <div class="col-sm-5">
          </div>
          <div class="col-sm-7 text-right">
            <%= paginate @categories, theme: "twitter-bootstrap-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
