<div class="portlet order">
  <div class="portlet-title">
    <div class="caption">
      <h4>
        <span class="text-danger"><%= t "title: "%></span><%= @order.user.name %>
      </h4>
    </div>
  </div>
  <div class="portlet-body">
    <div class="grid-content">
      <p>
        <span class="text-danger"><%= t "created: "%></span>
        <%= l @order.created_at, format: :long %>
      </p>
    </div>
  </div>
</div>
